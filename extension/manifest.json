{
  "description": "Finds a watermark on a given page",
  "manifest_version": 2,
  "name": "js-watermarking",
  "version": "0.1",
  // "homepage_url": "https://github.com/apuder/js-watermarking",
  // "repository": {
  //   "type": "git",
  //   "url": "https://github.com/apuder/js-watermarking"
  // },

  "minimum_chrome_version": "33.0.1715.0",

  "browser_action": {
    "default_title": "Search for Watermark",
    "default_icon": "icons/jsw-32.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],

  "icons": {
    "32": "icons/jsw-32.png"
  }

}
