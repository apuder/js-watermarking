{
  "description": "Applies a watermark, or finds a watermark on a given page",
  "manifest_version": 2,
  "name": "js-watermarking",
  "version": "0.1",
  "homepage_url": "https://github.com/apuder/js-watermarking",
  "repository": {
    "type": "git",
    "url": "https://github.com/apuder/js-watermarking"
  },

  "applications": {
    "gecko": {
      "id": "js-watermarking@sfsu.edu",
      "strict_min_version": "45.0.0"
    }
  },

  "permissions": [
    "activeTab"
  ], 
  
  "background": {
    "scripts": ["addon/background.js"]
  },

  "browser_action": {
    "default_icon": "addon/icons/jsw-32.png",
    "default_title": "Open js-watermarking"
  }

}
